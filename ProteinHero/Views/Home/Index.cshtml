@using ProteinHero.Database
@model List<Product>
@{
    ViewData["Title"] = "Startpagina";
}

<h1 class ="display-4">Welkom</h1>
<div class="products">     
     @foreach (var product in Model)
    {
        <a class="product" href="/product/@product.Id">
            <p>@product.Naam</p>

            <img src="@product.Img"/>
        </a>
    }
</div>

<h3>Nieuw!</h3>

