@using ProteinHero.Database
@model List<Product>
@{
    ViewData["Title"] = "Startpagina";
}

<div class="text-center">
     <h1 class ="display-4">Welkom</h1>
     <ul>
     @foreach (var product in Model)
    {
        <a class="product" href="/product/@product.Id">
            <p>@product.Naam</p>

            <img src="@product.Img"/>
        </a>
    }
     </ul>
</div>
<h3>Nieuw!</h3>

